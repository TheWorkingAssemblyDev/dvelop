<div id="email-signup">
  {% if settings.newsletter_cta != blank %}
    <p class="t-h4">{{settings.newsletter_cta}}</p>
  {% endif %}
  {% if settings.newsletter_text != blank %}
    <p class="t-label">{{settings.newsletter_text}}</p>
  {% endif %}
  <form id="email-signup-form" class="klaviyo_signup klaviyo_gdpr_embed_VEKBNz w mt4" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" autocomplete="off">
    <input type="hidden" name="g" value="VEKBNz">
    <input type="hidden" name="$fields" value="$consent">
    <input type="hidden" name="$list_fields" value="$consent">
    <div id="email-signup-input-wrapper" class="form-input fh fc bg-gray">
      <div class="klaviyo_field_group w mr3">
        <label for="k_id_email" class="visually-hidden">Email Address</label>
        <input class="klaviyo-input w" type="email" value="" name="email" id="k_id_email" placeholder="Enter Your Email"/>
      </div>
      <div class="klaviyo_form_actions">
        <button type="submit" class="klaviyo_submit_button btn yellow"><span>Subscribe</span></button>
      </div>
    </div>
    <div class="klaviyo_messages t-label mt2">
      <div class="success_message" style="display:none;"></div>
      <div class="error_message cr-red" style="display:none;"></div>
    </div>
  </form>
</div>