<section id="account-content">
<div class="mc ws">
  {% form 'create_customer' %}
    <h1>Create an account</h1> 
    <div class="field">
      <input type="text" name="customer[first_name]"{% if form.first_name %} value="{{ form.first_name }}"{% endif %} autocapitalize="words" id="register-first-name">
      <label for="register-first-name" class="hidden-label">First Name</label>
    </div>
    <div class="field">
      <input type="text" name="customer[last_name]"{% if form.last_name %} value="{{ form.last_name }}"{% endif %} autocapitalize="words" id="register-last-name">
      <label for="register-last-name" class="hidden-label">Last Name</label>
    </div>
    <div class="field">
      <input type="email" name="customer[email]"{% if form.errors contains 'email' %} class="error"{% endif %}{% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off" id="register-email">
      <label for="register-email" class="hidden-label">Your Email</label>
    </div>
    <div class="field">
      <input type="password" name="customer[password]" id="register-password"{% if form.errors contains 'password' %} class="error"{% endif %}>
      <label for="register-password" class="hidden-label">Password</label>
    </div>
    <button type="submit" class="btn">Create Account</button>
    <br><br>
    <a href="/account/login"><u>Have an account? Login</u></a>
    <div class="form-errors">
      {{ form.errors | default_errors }}
    </div>
  {% endform %}
</div>
</section>
<script>
    let customer_registration = document.querySelector("form[action='/account']");
    analytics.trackForm(customer_registration,"Customer Registered");
</script>